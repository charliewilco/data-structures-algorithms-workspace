{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"json": {
		"formatter": {
			"indentStyle": "tab"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noBannedTypes": "off",
				"noUselessThisAlias": "warn",
				"noStaticOnlyClass": "off",
				"noForEach": "warn"
			},
			"style": {
				"noArguments": "off",
				"noInferrableTypes": "off",
				"useConst": "off",
				"noParameterAssign": "warn",
				"noUselessElse": "warn",
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noAssignInExpressions": "warn",
				"noConfusingVoidType": "warn",
				"noExplicitAny": "warn"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
