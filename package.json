{
	"name": "@charliewilco/knxwledge",
	"version": "1.0.0",
	"license": "Unlicense",
	"files": [
		"dist/**/*"
	],
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"typings": "dist/index.d.ts",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "jest"
	},
	"devDependencies": {
		"@types/jest": "^29.2.6",
		"@types/node": "^18.11.18",
		"tsup": "^6.5.0",
		"jest": "^29.3.1",
		"prettier": "^2.8.3",
		"ts-jest": "^29.0.5",
		"typescript": "^4.9.4"
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"testEnvironment": "node",
		"verbose": true
	},
	"prettier": {
		"printWidth": 95,
		"singleQuote": false,
		"tabWidth": 2,
		"useTabs": true,
		"bracketSpacing": true
	},
	"tsup": {
		"entryPoints": [
			"src/index.ts"
		],
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
