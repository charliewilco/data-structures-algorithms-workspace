{
	"name": "@charliewilco/knxwledge",
	"version": "1.0.0",
	"license": "Unlicense",
	"main": "./index.js",
	"typings": "./index.d.ts",
	"sideEffect": false,
	"files": [
		"./*.d.ts",
		"./*.js",
		"./*.mjs",
		"./*.map"
	],
	"scripts": {
		"build": "tsup",
		"postbuild": "node scripts/move-output.mjs",
		"clean": "node scripts/clean.mjs",
		"dev": "tsup --watch",
		"test": "jest"
	},
	"devDependencies": {
		"@types/jest": "^29.4.0",
		"@types/node": "^18.14.1",
		"arg": "^5.0.2",
		"chalk": "^5.2.0",
		"del": "^7.0.0",
		"tsup": "^6.6.3",
		"jest": "^29.4.3",
		"prettier": "^2.8.3",
		"ts-jest": "^29.0.5",
		"typescript": "^4.9.5"
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"testEnvironment": "node",
		"verbose": true
	},
	"prettier": {
		"printWidth": 95,
		"singleQuote": false,
		"tabWidth": 2,
		"useTabs": true,
		"bracketSpacing": true
	},
	"tsup": {
		"entryPoints": [
			"src/index.ts",
			"src/ds.ts",
			"src/sorting.ts",
			"src/problems.ts",
			"src/js.ts"
		],
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
